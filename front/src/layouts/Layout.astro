---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { Toaster } from "solid-toast";
---

<!doctype html>
<html lang="en" class="scroll-smooth">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content="Diseño y desarrollo de páginas web en Colombia. Creamos sitios optimizados para SEO, rendimiento y adaptables a cualquier dispositivo. ¡Impulsa tu presencia online hoy! 📲 +57 3015703750"
        />
        <meta
            name="keywords"
            content="diseño web Bogotá, desarrollo de páginas web Bogotá y toda Colombia, diseño web responsive, desarrollo web SEO, páginas web para negocios Bogotá"
        />
        <meta name="author" content="BombaWeb" />
        <meta name="geo.region" content="CO-DC" />
        <meta name="geo.placename" content="Bogotá" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>
            Diseño Web en Bogotá | BombaWeb - Tu Socio Digital en Colombia
        </title>
    </head>
    <Header />
    <body>
        <slot />
        <Toaster position="bottom-right" client:load />
    </body>
    <Footer />
</html>

<style>
    html,
    body {
        margin: 0;
        padding: 0;
        width: 100%;
        height: 100%;
    }
</style>
