---
import { Logo } from "../Solid/Logo"
---


<header id="header" class="absolute w-full z-50 transition-all duration-300 bg-transparent">
    <div class="max-w-7xl mx-auto px-4 sm:px-6">
        <div class="flex justify-between items-center py-4">
            <Logo />
            <nav class="hidden md:flex items-center space-x-8">
                <a href="#" class="btn-link">Inicio</a>
                <a href="#" class="btn-link">Servicios</a>
                <a href="#" class="btn-link">¿Por qué elegirnos?</a>
                <a href="#" class="btn-link">Nuestro Proceso</a>
                <a
                    href="#"
                    class="btn-primary"
                    >Contáctanos</a
                >
            </nav>
        </div>
    </div>
</header>

<script>
    const header = document.getElementById('header')

    window.addEventListener('scroll', () => {
        if (window.scrollY > 0) {
            header?.classList.remove('absolute', 'bg-transparent')
            header?.classList.add('fixed', 'bg-white/60', 'backdrop-blur-lg', 'shadow-sm')
        } else if (window.scrollY < 1) {
            header?.classList.remove('fixed', 'bg-white/60', 'backdrop-blur-lg', 'shadow-sm')
            header?.classList.add('absolute', 'bg-transparent')

        }
    })
</script>
