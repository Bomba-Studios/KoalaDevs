---
import {
    MessageIcon,
    ArtIcon,
    LogoIcon,
    RocketIcon,
} from "../assets/Icons";

export const process = [
    {
        number: 1,
        title: "Consulta Inicial",
        description:
            "Conversamos sobre tu proyecto y definimos objetivos claros.",
        icon: MessageIcon,
    },
    {
        number: 2,
        title: "Diseño",
        description:
            "Creamos mockups y prototipos para visualizar tu sitio web.",
        icon: ArtIcon,
    },
    {
        number: 3,
        title: "Desarrollo",
        description: "Construimos tu sitio web con código limpio y optimizado.",
        icon: LogoIcon,
    },
    {
        number: 4,
        title: "Lanzamiento",
        description: "Desplegamos tu sitio y te ayudamos a ponerlo en marcha.",
        icon: RocketIcon,
    },
];
---

<section class="py-16 bg-gray-50" id="our-process">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center">
            <h2 class="text-3xl font-extrabold text-gray-900 sm:text-4xl">
                Nuestro Proceso
            </h2>
            <p class="mt-4 max-w-2xl mx-auto text-xl text-gray-500">
                Un enfoque estructurado para hacer realidad tu proyecto
            </p>
        </div>

        <div class="mt-12 grid gap-8 sm:grid-cols-2 lg:grid-cols-4">
            {
                process.map((process) => (
                    <div class="relative group">
                        <div class="flex flex-col items-center text-center">
                            <div class="relative">
                                <div class="w-16 h-16 bg-primary-100 rounded-full flex items-center justify-center mb-4">
                                    <process.icon />
                                </div>
                                <div class="absolute -top-2 -right-2 w-8 h-8 bg-primary-600 rounded-full flex items-center justify-center text-white font-bold">
                                    {process.number}
                                </div>
                            </div>
                            <h3 class="text-lg font-semibold text-gray-900 mb-2">
                                {process.title}
                            </h3>
                            <p class="text-gray-600">{process.description}</p>
                        </div>
                    </div>
                ))
            }
        </div>
    </div>
</section>
